body
    background rgb(252,252,252)
    margin 0px
    font-family font-regular
    overflow-x hidden !important

.section
    position relative

.glow0
    animation glow0 1s ease-in-out infinite alternate

@-webkit-keyframes glow0
  from
    box-shadow 0px 0px 5px 5px rgba(255, 255, 255, 1)
  to
    box-shadow 0px 0px 5px 9px rgba(255, 255, 255, 1)
    
.glow1
  text-align center
  -webkit-animation glow 1s ease-in-out infinite alternate
  -moz-animation glow 1s ease-in-out infinite alternate
  animation glow 1s ease-in-out infinite alternate

@-webkit-keyframes glow
  from
    text-shadow 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #e60073, 0 0 40px #e60073, 0 0 50px #e60073, 0 0 60px #e60073, 0 0 70px #e60073
  to
    text-shadow 0 0 20px #fff, 0 0 30px #ff4da6, 0 0 40px #ff4da6, 0 0 50px #ff4da6, 0 0 60px #ff4da6, 0 0 70px #ff4da6, 0 0 80px #ff4da6
    
.loading
    position fixed
    width 100vw
    height 120vh
    background rgb(0,0,0,1)
    display flex
    justify-content center
    align-items center
    z-index 999999
    top 0
    #loader
        border 2px #3F3F3F solid
        border-radius 50%
        border-top-color #F26E34
        width 90px
        height 90px
        animation spin 1s linear infinite
        z-index 9999
        @keyframes spin
            from
                transform translate(0%, -50%) rotate(0deg)
            to
                transform translate(0%, -50%) rotate(360deg)

